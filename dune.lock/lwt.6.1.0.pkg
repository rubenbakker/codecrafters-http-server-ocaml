(version 6.1.0)

(build
 (all_platforms
  ((action
    (progn
     (when %{pkg-self:dev} (run dune subst))
     (run
      dune
      exec
      -p
      %{pkg-self:name}
      src/unix/config/discover.exe
      --
      --save
      --use-libev
      %{pkg:conf-libev:installed})
     (run dune build -p %{pkg-self:name} -j %{jobs} @install))))))

(depends
 (all_platforms
  (dune ocaml cppo dune-configurator ocplib-endian base-threads base-unix)))

(source
 (fetch
  (url https://github.com/ocsigen/lwt/archive/refs/tags/6.1.0.tar.gz)
  (checksum md5=16d58c8295b5273e58779db0ad1f967a)))
